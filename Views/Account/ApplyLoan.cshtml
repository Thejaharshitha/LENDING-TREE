@model Account.Models.Loan
@{
    ViewBag.Title = "Apply Loan";

}
<button>@Html.ActionLink("BACK", "Welcome", "Account")</button>

<h1>Loan Application form</h1>
<br />
<h3>Fill the below details to apply for loan</h3>
<div>
    @using (Html.BeginForm("ApplyLoan", "Account"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">

            <!--Show details are saved successfully message-->
            <div class="col-lg-12" style="color:red;">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2" hidden="hidden">@Html.LabelFor(a => a.UserId)</div>
            <div class="col-lg-10" hidden="hidden">@Html.TextBoxFor(a => a.UserId, new {@Value= Session["userid"].ToString(), @class = "form-control" })</div>
            <div class="col-lg-10">@Html.ValidationMessageFor(a => a.UserId, "", new { @class = "text-danger" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Occupation)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Occupation, new { @class = "form-control" })</div>
            <div class="col-lg-10">@Html.ValidationMessageFor(a => a.Occupation, "", new { @class = "text-danger" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.LoanType)</div>
            <div class="col-lg-10">
                <select class="form-control" id="LoanType" name="LoanType">
                    <option>House</option>
                    <option>Bike</option>
                    <option>Car</option>
                </select>
            </div>
            <div class="col-lg-10">@Html.ValidationMessageFor(a => a.LoanType, "", new { @class = "text-danger" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.AnnualIncome)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.AnnualIncome, new { @class = "form-control" })</div>
            <div class="col-lg-10">@Html.ValidationMessageFor(a => a.AnnualIncome, "", new { @class = "text-danger" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.LoanAmount)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.LoanAmount, new { @class = "form-control" })</div>
            <div class="col-lg-10">@Html.ValidationMessageFor(a => a.LoanAmount, "", new { @class = "text-danger" })</div>
        </div><br />
        <input type="submit" value="Apply Loan" class="btn btn-primary" />

    }
</div>