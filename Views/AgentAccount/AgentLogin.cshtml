@model Account.Models.AgentLogin
@{
    ViewBag.Title = "AgentLogin";

}

<h2>AgentLogin</h2>

<div>
    @using (Html.BeginForm("AgentLogin", "AgentAccount"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.AgentUserId)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.AgentUserId, new { @class = "form-control" })</div>
            <div class="col-lg-10">@Html.ValidationMessageFor(a => a.AgentUserId, "", new { @class = "text-danger" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.AgentPassword)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.AgentPassword, new { @class = "form-control", type = "Password" })</div>
            <div class="col-lg-10">@Html.ValidationMessageFor(a => a.AgentPassword, "", new { @class = "text-danger" })</div>
        </div><br />
        <div class="row">
                <div class="col-lg-2">@Html.LabelFor(a => a.Department)</div>

                <div class="col-lg-10">
                    @Html.DropDownList("Department", new List<SelectListItem>
                    {

                       new SelectListItem {Text ="Pickup",Selected = true },
                       new SelectListItem {Text ="Verification" },
                       new SelectListItem {Text ="Legal" }
                   })
                </div>

                <div class="col-lg-10" style="color:red;">@Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })</div>
            </div>
        <input type="submit" value="Login" class="btn btn-primary" />
    }
</div>