@model IEnumerable<Account.Models.Loan>

@{
    ViewBag.Title = "LoanAgencyLegallyVerified";
}
<button>@Html.ActionLink("BACK", "LoanAgencyAdminMainPage", "AgentAccount")</button>
<br />
<h2>New Loans LegallyVerified By Legal Department</h2>

<table class="table">
    <tr>
        <th>Loan Id</th>
        <th>User Id</th>
        <th>Update Status</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(i => item.LoanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.ActionLink("Details", "LoanAgencyLegallyShowLoanDetails", new { loanid = item.LoanId })
            </td>
        </tr>
    }
</table>